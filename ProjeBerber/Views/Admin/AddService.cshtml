@model ProjeBerber.Models.Service
@{
    ViewData["Title"] = "Hizmet Ekle";
}

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="AddService" method="post">
    <div class="mb-3">
        <label for="Name">Hizmet Adı:</label>
        <input type="text" id="Name" name="Name" asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="DurationMinutes">Süre (dk):</label>
        <input type="number" id="DurationMinutes" name="DurationMinutes" asp-for="DurationMinutes" class="form-control" required />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Price">Ücret:</label>
        <input type="number" id="Price" name="Price" asp-for="Price" class="form-control" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Ekle</button>
</form>
