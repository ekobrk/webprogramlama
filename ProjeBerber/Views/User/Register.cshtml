@model ProjeBerber.Models.User
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2 class="text-light">Kayıt Ol</h2>

<form asp-action="Register" method="post">
    <div class="mb-3 text-light">
        <label for="AdSoyad">Ad Soyad:</label>
        <input type="text" id="AdSoyad" name="AdSoyad" asp-for="AdSoyad" class="form-control" required />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div class="mb-3 text-light">
        <label for="Email">E-posta:</label>
        <input type="email" id="Email" name="Email" asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 text-light">
        <label for="Sifre">Şifre:</label>
        <input type="password" id="Sifre" name="Sifre" asp-for="Sifre" class="form-control" required />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success text-light">Kayıt Ol</button>
</form>
